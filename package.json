{
  "name": "nrpjs",
  "version": "1.0.0",
  "description": "null",
  "main": "index.js",
  "scripts": {
    "dev": "chokidar 'packages/*/src/**/*.ts' -c 'npm run build || exit 0'",
    "build": "pnpm --filter './packages/*' run build",
    "init": "yarn && lerna bootstrap --force-local --registry=https://registry.npm.taobao.org",
    "rm": "find . -name \"node_modules\" -type d -prune -exec rm -rf '{}' +",
    "lint:es": "eslint --ext \"src/**/*.ts\" src mock tests",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install",
    "commit": "git add . && cz",
    "preinstall-old": "npx only-allow pnpm",
    "clean": "rimraf node_modules **/*/node_modules",
    "cs": "changeset",
    "cs:version": "changeset version",
    "cs:tag": "changeset tag",
    "prerelease": "pnpm build",
    "release": "changeset publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ximing/nrp.git"
  },
  "author": "",
  "license": "ISC",
  "private": true,
  "packageManager": "pnpm@8.14.1",
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "bugs": {
    "url": "https://github.com/ximing/nrp/issues"
  },
  "homepage": "https://github.com/ximing/nrp#readme",
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "@types/node": "^18.19.15",
    "commitizen": "^4.3.0",
    "commitlint": "^17.4.4",
    "commitlint-config-cz": "^0.13.3",
    "cross-env": "^7.0.3",
    "chokidar-cli": "^3.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^6.9.2",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-html-reporter": "^0.7.4",
    "eslint-plugin-flowtype": "^5.10.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^24.7.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "glob": "^7.2.3",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.6",
    "typescript": "^5.0.3",
    "rimraf": "^3.0.0",
    "standard-version": "^9.5.0"
  }
}
